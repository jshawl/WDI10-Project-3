<p id="notice"><%= notice %></p>

<h1>Encounters</h1>

<table>
  <thead>
    <tr>
      <th>site</th>
      <th>Site</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encounters.each do |encounter| %>
      <tr>
        <td><%= encounter.site %></td>
        <td><%= encounter.site_id %></td>
        <td><%= encounter.comments %></td>
        <td><%= link_to 'Show', encounter %></td>
        <td><%= link_to 'Edit', edit_encounter_path(encounter) %></td>
        <td><%= link_to 'Destroy', encounter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

